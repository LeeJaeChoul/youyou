<div class="container" style="margin-top: 200px; border:1px solid #eee">
<h2 class="text-center">SIGN IN</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="input-group">
	  <span class="input-group-addon" style="padding-right: 40px;">Email</span>
	  <%= f.email_field :email, autofocus: true, class:"form-control", placeholder: "dongguk@dgu.edu" %>
	</div><br />
  <div class="input-group">
	  <span class="input-group-addon">Password</span>
	  <%= f.password_field :password, autofocus: true, class:"form-control" %>
	</div><br />
  <div class="row text-center">
    <div class="actions col-md-6">
      <%= f.submit "SIGN IN", class: "btn btn-xl" %>
    </div>
    <div class="g-mb-20 col-md-6">
      <%= link_to "SIGN UP", new_registration_path(resource_name), class: "btn btn-xl" %>
    </div>
  </div><br />
<% end %>


</div>